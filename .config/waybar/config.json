{
  "layer": "top",
  "position": "top",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "fixed-center": true,
  "spacing": 5,
  "reload_style_on_change": true,
  "ipc": true,
  "include": [
    "~/.config/waybar/modules.json",
    "~/.config/waybar/modulesCustom.json"
  ],
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "privacy",
    "custom/separator#line",
    "tray",
    "custom/separator#line",
    "wireplumber",
    "custom/separator#dot-line",
    "cpu",
    "custom/separator#dot-line",
    "memory",
    "custom/separator#line",
    "custom/configuration",
    "custom/separator#dot-line",
    "custom/disk"
  ]
}
